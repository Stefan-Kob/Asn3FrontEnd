<!DOCTYPE html>
<html>

<head>
    <title>Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <nav class="navbar navbar-dark bg-dark px-3">
        <h2 class="text-white">Shoe Store</h2>
        <a href="/cart" class="btn btn-outline-light">ðŸ›’ Cart</a>
    </nav>

    <div class="container py-4">
        <div class="row">

            <!-- Load all the products available to be added to cars -->
            <% products.forEach(p=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">

                        <img src="<%= p.image %>" class="card-img-top" style="height: 200px; object-fit: contain;">

                        <div class="card-body">
                            <h5 class="card-title">
                                <%= p.name %>
                            </h5>
                            <p class="card-text">
                                <%= p.description %>
                            </p>
                            <p class="card-text fw-bold">$<%= p.price %>
                            </p>
                            <p class="text-muted">SKU: <%= p.sku %>
                            </p>

                            <form method="POST" action="/addtocart">
                                <input type="hidden" name="id" value="<%= p.id %>">
                                <button class="btn btn-primary w-100">Add to Cart</button>
                            </form>
                        </div>

                    </div>
                </div>
                <% }) %>

        </div>
    </div>

</body>
<footer>
    <p>Created By Josh Lanesmith (8885373), Nakul Upasani (8827362), Stefan Kobetich (8832196)</p>
</footer>
</html>